{% comment %} Need to create backgrounds for users and linked it to that {% endcomment %}

<style>
  #shopify-section-{{ section.id }} {
    background: {{ block.settings.background_color }};
    {% if block.settings.background_image != blank %}
      background-image: url({{ block.settings.background_image }});
      background-size: cover;
      background-position: center;
    {% endif %}
    overflow: hidden;

  }
    .db-cta_1 {
        text-align: {{ block.settings.alignment }};
        padding: {{ block.settings.section_padding_top_bottom }}px 0;
    }

    .db-cta_1__header {
      color: {{ block.settings.title_color }};
      font-size: {{ block.settings.title_size }}px;
      margin-bottom: {{ block.settings.title_margin_bottom }}px;
  }

    .db-cta_1__content {
        margin-bottom: {{ block.settings.content_margin_bottom }}px;
    }

    .db-cta_1__content * {
        color: {{ block.settings.content_color }};
        font-size: {{ block.settings.content_size }}px;
    }

    .db-cta_1__button {
        background-color: {{ block.settings.button_background_color }};
        color: {{ block.settings.button_text_color }};
        border: 1px solid {{ block.settings.button_border_color }};
        border-radius: {{ block.settings.button_border_radius }}px;
        padding: {{ block.settings.button_padding_top_bottom }}px {{ block.settings.button_padding_left_right }}px;
        font-size: {{ block.settings.button_font_size }}px;
        font-weight: {{ block.settings.button_font_weight }};
        display: inline-block;
        text-decoration: none;
        line-height: 1;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .db-cta_1__button:hover {
        background-color: {{ block.settings.button_hover_background_color }};
        color: {{ block.settings.button_hover_text_color }};
    }
</style>

<div class="db-cta_1 {{ block.settings.custom_classes }}">
  {% if block.settings.title != blank %}
    <h2 class="db-cta_1__header">{{ block.settings.title }}</h2>
  {% endif %}
  {% if block.settings.content != blank %}
    <div class="db-cta_1__content">{{ block.settings.content }}</div>
  {% endif %}
  {% if block.settings.button_text != blank and block.settings.button_url != blank %}
    <a href="{{ block.settings.button_url }}" class="db-cta_1__button" aria-label="{{ block.settings.button_text }}">
      {{- block.settings.button_text -}}
    </a>
  {% endif %}
</div>

