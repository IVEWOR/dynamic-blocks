<style>
  #shopify-section-{{ section.id }} {
      background-color: {{ block.settings.bg_color }};
      overflow: hidden;
  }
  .db-toggle {
      padding: 0 16px;
      border: 1px solid #fff;
      margin: 10px 0;
      position: relative;
  }
  .db-toggle__title {
      color: {{ block.settings.title_color }};
      cursor: pointer;
  }
  .db-toggle__header {
      display: flex;
      justify-content: space-between;
      align-items: center;
  }
  .db-toggle__content {
      color: {{ block.settings.content_color }};
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease-in-out, opacity 0.3s ease-in-out;
      opacity: 0;
  }
  .db-toggle__content.active {
      max-height: 500px;
      opacity: 1;
  }
</style>

<div class="db-toggle">
  <div class="db-toggle__header">
    <{{ block.settings.title_tag }} class="db-toggle__title">
      {{- block.settings.title -}}
    </{{ block.settings.title_tag }}>
    {% if block.settings.icon == 'arrow' %}
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="{{ block.settings.icon_color }}"
        height="{{ block.settings.icon_size }}"
        width="{{ block.settings.icon_size }}"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3" />
      </svg>
    {% elsif block.settings.icon == 'chevron' %}
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="{{ block.settings.icon_color }}"
        height="{{ block.settings.icon_size }}"
        width="{{ block.settings.icon_size }}"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
      </svg>
    {% elsif block.settings.icon == 'plus' %}
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="{{ block.settings.icon_color }}"
        height="{{ block.settings.icon_size }}"
        width="{{ block.settings.icon_size }}"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
    {% endif %}
  </div>
  <div class="db-toggle__content">
    {{- block.settings.content -}}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const db_toggle = document.querySelector('.db-toggle');
    const db_header = db_toggle.querySelector('.db-toggle__header');
    const db_content = db_toggle.querySelector('.db-toggle__content');

    db_header.addEventListener('click', function () {
      console.log('clicked');
      db_content.classList.toggle('active');
    });
  });
</script>

{% schema %}
{
  "name": "Toggle",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "select",
      "id": "title_tag",
      "label": "Title Tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" },
        { "value": "h5", "label": "H5" },
        { "value": "h6", "label": "H6" },
        { "value": "p", "label": "P" },
        { "value": "span", "label": "Span" },
        { "value": "div", "label": "Div" }
      ],
      "default": "h3"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "color",
      "id": "content_color",
      "label": "Content Color",
      "default": "#000"
    },
    {
      "type": "select",
      "id": "icon",
      "label": "Icon",
      "options": [
        { "value": "arrow", "label": "Arrow" },
        { "value": "chevron", "label": "Chevron" },
        { "value": "plus", "label": "Plus" }
      ],
      "default": "arrow"
    },
    {
      "type": "number",
      "id": "icon_size",
      "label": "Icon Size",
      "default": 20
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#c1c1c1"
    }
  ]
}
{% endschema %}
